<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hostServiceFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs.wnmc.salutapp.HostService"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <TextView
        android:id="@+id/registered_dev_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="@string/registered_devices"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_file"
        android:id="@+id/send_file_button"
        android:layout_above="@+id/registered_dev_view"
        android:layout_alignParentStart="true" />


</RelativeLayout>
